public class SnakeToCamelCase {
    public static void main(String[] args) {
        String snakeCase = "HELLO_WORLD_EXAMPLE";
        String camelCase = convertToCamelCase(snakeCase);
        System.out.println(camelCase); // 输出：HelloWorldExample
    }

    public static String convertToCamelCase(String snakeCase) {
        StringBuilder camelCaseBuilder = new StringBuilder();
        boolean shouldCapitalize = true;

        for (int i = 0; i < snakeCase.length(); i++) {
            char currentChar = snakeCase.charAt(i);

            if (currentChar == '_') {
                shouldCapitalize = true;
            } else {
                if (shouldCapitalize) {
                    camelCaseBuilder.append(Character.toUpperCase(currentChar));
                    shouldCapitalize = false;
                } else {
                    camelCaseBuilder.append(Character.toLowerCase(currentChar));
                }
            }
        }

        return camelCaseBuilder.toString();
    }
}
